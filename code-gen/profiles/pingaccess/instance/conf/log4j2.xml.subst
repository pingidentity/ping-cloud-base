            <PatternLayout pattern="%d{ABSOLUTE} %-5p [%c{1}] %m%n" />
        </Console>

        <Console name="CONSOLE-JSON" target="SYSTEM_OUT">
            <JsonTemplateLayout eventTemplateUri="${sys:pa.log4j.json.templates.uri}/pingaccess-log.json"/>
        </Console>

