    <Appenders>
        <!-- =============================== -->
        <!-- Append messages to local files  -->
        <!-- =============================== -->

        <!-- Server log : A size based file rolling appender -->
        <RollingFile name="File"
                     fileName="${sys:pa.home}/log/pingaccess.log"
                     filePattern="${sys:pa.home}/log/pingaccess.log.%i"
                     ignoreExceptions="false">
            <PatternLayout>
                <!-- Uncomment this if you want to use UTF-8 encoding instead of system's default encoding. -->
                <!--
                <charset>UTF-8</charset>
                -->
                <pattern>%d{ISO8601} %5p [%X{exchangeId}] %c - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="100000 KB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- Server log : A size based file rolling appender in JSON format -->
        <RollingFile name="File-JSON"
                     fileName="${sys:pa.home}/log/pingaccess.log"
                     filePattern="${sys:pa.home}/log/pingaccess.log.%i"
                     ignoreExceptions="false">
            <JsonTemplateLayout eventTemplateUri="${sys:pa.log4j.json.templates.uri}/pingaccess-log.json"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="100000 KB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- ============================== -->
        <!-- Append messages to the console -->
        <!-- ============================== -->
        <!-- To use, uncomment the appenderRef under the AsyncRoot element, in the 'Loggers' section -->

