<?xml version="1.0" encoding="UTF-8"?>

<!-- ===================================================================== -->
<!--                                                                       -->
<!--  Log4J2 Configuration                                                 -->
<!--                                                                       -->
<!-- ===================================================================== -->

<!--
   | For more configuration information and examples see the Apache Log4j2
   | website: http://logging.apache.org/log4j/2.x/
 -->

<!--
   | Due to a bug in Log4J2, there will a message "ERROR appender <Failover-Appender> has no parameter that matches element Failovers" upon startup
   | if Failover Appenders are enabled.  The failover appenders are configured correctly and are functional. Please disregard the error message.
   |
   | monitorInterval - the number of seconds before Log4J2 detects changes to the configuration file and reconfigures itself.
 -->
<Configuration monitorInterval="30" shutdownHook="enable" packages="com.pingidentity.pa.cli.logging.appenders.log4j2,com.pingidentity.pa.cli.logging.layouts.log4j2,com.pingidentity.pa.cli.logging.filters.log4j2,com.pingidentity.pa.logging.log4j2">
    <Loggers>
        <!-- PingAccess Loggers -->
        <AsyncLogger name="com.pingidentity" level="INFO" additivity="false" includeLocation="false">
            <AppenderRef ref="CONSOLE-JSON" />
            <!--<AppenderRef ref="File" />-->
            <!--<AppenderRef ref="CONSOLE" />-->
            <!--<AppenderRef ref="SYSLOG" />-->
        </AsyncLogger>

        <!-- Logs configuration replication details -->
        <AsyncLogger name="com.pingidentity.pa.polling.replication" level="INFO"/>

        <!-- Logs details/ordering of resources -->
        <AsyncLogger name="com.pingidentity.pa.core.proxies.ProxyInfoLogger" level="INFO"/>

        <!-- Logs details related to loading the administrative configuration from disk into the runtime -->
        <AsyncLogger name="com.pingidentity.pa.config.DefaultConfigurationManager" level="INFO"/>

        <!--
           This logger logs all HTTP request header values at TRACE level.
           WARNING: This is intended for debugging purposes only. Sensitive information, such as passwords, may be
           logged when the level of this logger is set to TRACE.
       -->
        <AsyncLogger name="com.pingidentity.pa.logging.categories.HttpRequestHeaderLogger"
                     level="${sys:pa.log.level.requestheaders:-INFO}" />
        <!--
            This logger logs all HTTP GET request parameter values at TRACE level.
            WARNING: This is intended for debugging purposes only. Sensitive information, such as passwords, may be
            logged when the level of this logger is set to TRACE.
        -->
        <AsyncLogger name="com.pingidentity.pa.logging.categories.HttpRequestParameterLogger"
                     level="${sys:pa.log.level.requestparams:-INFO}" />

        <!--
            HTTP client provides information about requests made to PingAccess by clients and the response sent back to
            the client.
            WARNING: This is intended for debugging purposes only. Sensitive information, such as passwords, may be
            logged when the level of this logger is set to TRACE.
        -->
        <AsyncLogger name="com.pingidentity.pa.logging.categories.HTTPClientLog"
                     level="${sys:pa.log.level.httpclient:-INFO}" />

        <!--
            HTTP Application provides information about requests made by PingAccess to other tools or services such as
            PingFederate, and the response sent back to PingAccess.
            WARNING: This is intended for debugging purposes only. Sensitive information, such as passwords, may be
            logged when the level of this logger is set to TRACE.
        -->
        <AsyncLogger name="com.pingidentity.pa.logging.categories.HTTPAppLog"
                     level="${sys:pa.log.level.httpapplication:-INFO}" />

        <!-- Log from all Groovy rules -->
        <AsyncLogger name="GroovyRule" level="${sys:pa.log.level.groovyrule:-INFO}"/>

        <!--
        Log entries can be generated from Groovy rules. All Groovy rules use a logger with a name like:

            GroovyRule.[RULE_NAME]

        where RULE_NAME is replaced with the name of the rule.

        To enable INFO logging from a specific Groovy rule with the name "example", uncomment the following line:
        <AsyncLogger name="GroovyRule.[example]" level="${sys:pa.log.level.groovyrule:-INFO}"/>
        -->

        <!-- Log incoming and outgoing cookies. -->
        <AsyncLogger name="com.pingidentity.pa.core.interceptor.CookieLoggingInterceptor"
                     level="${sys:pa.log.level.cookie:-INFO}"/>

        <!-- Log Certificate Revocation Checking/Validation. -->
        <AsyncLogger name="com.pingidentity.pa.policy.certs.CertificateRevocationInterceptor"
                     level="${sys:pa.log.level.crlhandling:-INFO}"/>

        <!-- Analyze to state of connections to PingAccess. -->
        <AsyncLogger name="com.pingidentity.pa.transport.http.async.EventLoggingHandler"
                     level="${sys:pa.log.level.networkevents:-INFO}"/>

