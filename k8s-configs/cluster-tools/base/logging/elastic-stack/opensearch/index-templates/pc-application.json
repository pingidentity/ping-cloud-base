{
  "index_patterns": [
    "pc-application-*",
    "pc-application-ext-*",
    "pc-application-api-*"
  ],
  "template": {
    "settings": {
      "index.unassigned.node_left.delayed_timeout": "15m",
      "index.number_of_shards": "1",
      "index.number_of_replicas": "1",
      "index.refresh_interval": "30s",
      "index": {
        "routing": {
          "allocation": {
            "require": {
              "temp": "hot"
            }
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "cluster_name": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        }
      }
    }
  },
  "composed_of": [],
  "priority": 100
}