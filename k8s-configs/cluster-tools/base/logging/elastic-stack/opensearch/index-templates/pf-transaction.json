{
  "index_patterns": [
    "pf-transaction-*"
  ],
  "template": {
    "settings": {
      "index.unassigned.node_left.delayed_timeout": "10m",
      "index.number_of_shards": "3",
      "index.number_of_replicas": "1",
      "index.refresh_interval": "30s",
      "index": {
        "routing": {
          "allocation": {
            "require": {
              "temp": "hot"
            }
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "@version": {
          "type": "text",
          "fields": {
            "keyword": {
              "ignore_above": 256,
              "type": "keyword"
            }
          }
        },
        "cluster_name": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        }
      }
    }
  },
  "composed_of": [],
  "priority": 100
}